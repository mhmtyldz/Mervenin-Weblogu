@model Ugurcan.Models.Tablolar.Category
@{
    ViewBag.Title = "Kategori Oluştur";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="header-account"></section>
@using (Html.BeginForm("CategoryCreate", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    
        <label><b>Kategori Adı</b></label>
        @Html.TextBoxFor(x => x.KategoriAdi, new { id = "login-username", name = "uname", required = "required", placeholder = "Kategori Adı", maxlength = 50 })
       
        <button type="submit">Oluştur</button>
    
}

<script>
    // Get the modal
    var modal = document.getElementById('id01');

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function (event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }
</script>