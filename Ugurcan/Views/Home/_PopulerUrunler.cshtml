@model IEnumerable<Ugurcan.Models.Tablolar.Product>
<div class="wow fadeInUp col-md-12 col-sm-12" data-wow-delay="1.3s">
    <h1 style="color: #529494">En Çok Okunanlar</h1>

</div>


<div class="container" style="margin-top:50px;">
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-xs-12 col-sm-6 col-md-3">
                <div class="col-item">
                    <div class="post-img-content">
                        <img src="@item.ResimURL" class="img-responsive" />
                        <span class="post-title">
                            <b>@item.Category.KategoriAdi</b><br>

                        </span>

                    </div>
                    <div class="info">
                        <div class="row">
                            <div class="price col-md-6">
                              
                                @if (item.Baslik.Length > 14)
                                {
                                   <h5 style="color: #c302b3">@(item.Baslik.Substring(0, 14) + "..")</h5>

                                }
                                else
                                {
                                   <h5 style="color: #c302b3"> @item.Baslik</h5>
                                }
                               
                            </div>
                            <div class="rating hidden-sm col-md-6">
                                <h5 class="price-text-color"><span class="fa fa-eye"></span> @item.Okunma</h5>
                            </div>
                        </div>
                        <div class="separator clear-left">
                            <p class="btn-add">
                                <a href="/Blog/BlogYazimDetay/@item.ID" class="btn btn-info"><i class="fa fa-thumbs-up">Beğen</i></a>
                            </p>
                            <p class="btn-details">
                                <i class="fa fa-list"></i><a href="/Blog/BlogYazimDetay/@item.ID" class="hidden-sm">Daha Fazla</a>
                            </p>
                        </div>
                        <div class="clearfix">
                        </div>
                    </div>
                </div>
            </div>
        }



    </div>
</div>