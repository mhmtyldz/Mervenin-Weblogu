@model IEnumerable<Ugurcan.Models.Tablolar.Product>

<style>
    .iso-nav {
        text-align: center;
    }

    .mahmut li {
        list-style: none;
        margin: 0;
        padding: 0;
        display: inline-block;
        padding: 10px 15px;
        border: 1px solid #5274a9;
        cursor: pointer;
        -webkit-transition: all .5s ease;
        -moz-transition: all .5s ease;
        -ms-transition: all .5s ease;
        transition: all .5s ease;
    }

        .mahmut li:hover {
            background: #5274a9;
            color: #fff;
        }
    /****** Main portfilio styling ********/

    .main-iso {
        width: 100%;
    }

        .main-iso .item {
            width: 350px;
            float: left;
            
            margin-bottom: 10px;
            margin-left: 10px;
            border: 1px solid #e1e1e1;
            border-radius: 7px;
        }


    .active {
        background: #5274a9;
        color: #fff;
    }
</style>


<div class="container">

    <div class="row">

        <div class="col-md-12 col-sm-12">

            <!-- iso section -->
            <div class="iso-nav">
                <ul class="mahmut">
                    <li class="active" data-filter="*">Hepsi</li>
                    @Html.Action("_Kategori2Partial", "Home")

                </ul>
            </div>


            <div class="main-iso">
                @foreach (var item in Model)
                {
                    <div class="item @item.Category.KategoriAdi">
                        <a href="/Blog/BlogYazimDetay/@item.ID" ><img src="@item.ResimURL" class="img-rounded" height="300" /> </a>
                    </div>
                }

            </div>

        </div>
    </div>
</div>



