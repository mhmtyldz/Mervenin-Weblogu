<!DOCTYPE html>
<html lang="en">
<head>
    <!--

    Template 2082 Pure Mix

    http://www.tooplate.com/view/2082-pure-mix

    -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="title" content="Merve'nin Weblogu'" />
    <meta name="description" content="Merve'nin Weblogu insanları heyecanlandıran hikayeler ve anılarla sizlerle" />
    <meta name="keywords" content="Mervenin Weblogu,Merve'nin Weblogu,Blog,Weblog,Blogger,Blog yazısı,hikayeler,Mervenin Webloğu" />
    <meta name="author" content="Mervenin Weblogu" />
    <meta name="rating" content="General" />
    <meta name="expires" content="no" />
    <meta name="language" content="turkish, TR" />
    <meta name="distribution" content="Global" />
    <meta name="googlebot" content="NOODP" />
    <meta name="robots" content="all" />
    <meta name="robots" content="follow" />
    <meta name="robots" content="index" />

    <!-- Site title
    ================================================== -->
    <title>@ViewBag.Title</title>
    
    <link rel="icon" type="image/png" href="/Content/images/favicon-32x32.png" sizes="32x32" />

    <!-- Bootstrap CSS
    ================================================== -->
    <link rel="stylesheet" href="/Content/css/bootstrap.min.css">

    <!-- Animate CSS
    ================================================== -->
    <link rel="stylesheet" href="/Content/css/animate.min.css">

    <!-- Font Icons CSS
    ================================================== -->
    <link rel="stylesheet" href="/Content/css/font-awesome.min.css">
    <link rel="stylesheet" href="/Content/css/ionicons.min.css">

    <!-- Main CSS
    ================================================== -->
    <link rel="stylesheet" href="/Content/css/style.css">
    <link href="~/Content/css/sweetalert.css" rel="stylesheet" />
    <!-- Google web font
    ================================================== -->
    <link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700,300' rel='stylesheet' type='text/css'>


    <script src="~/Content/js/jquery.js"></script>
    <style>
        .logo {
            width: 200px;
            max-width: 100%;
            height: 75px;
        }
    </style>
</head>
<body>


    <!-- Preloader section
    ================================================== -->
    <div class="preloader">

        <div class="sk-spinner sk-spinner-pulse"></div>

    </div>


    <!-- Navigation section
    ================================================== -->
    <div class="nav-container">
        <nav class="nav-inner transparent">

            <div class="navbar">
                <div class="container">
                    <div class="row">

                        <div class="brand">
                            <a style="color:#fff" href="/Home/Anasayfa">
                                Merve'nin Webloğu
                                @*<img class="logo" src="/Content/images/logo.jpg" />*@
                            </a>
                        </div>

                        <div class="navicon">
                            <div class="menu-container">

                                <div class="circle dark inline">
                                    <i class="icon ion-navicon"></i>
                                </div>

                                <div class="list-menu">
                                    <i class="icon ion-close-round close-iframe"></i>
                                    <div class="intro-inner">
                                        <ul id="nav-menu">
                                            <li><a href="/Home/Anasayfa">Anasayfa</a></li>
                                            <li><a href="/About/Hakkinda">Hakkımda</a></li>
                                            <li><a href="/Blog/BlogYazilarim/">Blog Yazılarım</a></li>
                                            <li><a href="/Image/ResimGalerisi/">Fotoğraflar</a></li>
                                            <li><a href="/Contact/BanaUlasin">Bana Ulaşın</a></li>
                                            @if (Session["uyeid"] == null)
                                            {
                                                <li><a href="/Account/Login">Giris Yap</a></li>
                                            }
                                            else
                                            {
                                                <li><a href="/Account/Logout">Çıkıs Yap</a></li>
                                            }

                                        </ul>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </nav>
    </div>
    <!-- Header section
    ================================================== -->
    @RenderBody()

    <!-- Footer section
    ================================================== -->
    <footer>
        <div class="container">
            <div class="row">

                <div class="col-md-12 col-sm-12">
                    <p class="wow fadeInUp" data-wow-delay="0.3s">Copyright © @DateTime.Now.Year Merve'nin Weblogu - Prepared by www.yildizwebyazilim.com</p>
                    <ul class="social-icon wow fadeInUp" data-wow-delay="0.6s">
                        <li><a href="https://www.instagram.com/merveninweblogu/?hl=tr" target="_blank" class="fa fa-instagram"></a></li>
                        <li><a href="https://www.facebook.com/merweblog" target="_blank" class="fa fa-facebook"></a></li>
                        <li><a href="#" class="fa fa-twitter"></a></li>
                        <li><a href="#" class="fa fa-behance"></a></li>
                        <li><a href="#" class="fa fa-google-plus"></a></li>
                    </ul>
                </div>

            </div>
        </div>
    </footer>


    <!-- Javascript
    ================================================== -->



    <script src="/Content/js/plugins/bootstrap.min.js"></script>
    <script src="~/Content/js/isotope.js"></script>
    <script src="~/Content/js/custom.js"></script>
    <script src="/Content/js/wow.min.js"></script>
    <script src="/Content/js/notify.js"></script>
    <script src="/Content/js/jquery.form.min.js"></script>
    <script src="/Content/js/sweetalert.min.js"></script>


</body>
</html>